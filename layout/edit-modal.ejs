<!-- edit Modal -->
<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  aria-labelledby="editModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content p-8">
      <div class="modal-header border-bottom-0">
        <!-- form title -->
        <h2 class="modal-title fs-2 fw-bold" id="editModalLabel">Edit Admin</h2>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <!-- modal body -->
      <div class="modal-body">
        <form>
          <!-- Account -->
          <section class="border-bottom pb-6">
            <h3 class="fs-3 mb-4 fw-bold">Account</h3>
            <div class="mb-3">
              <label for="inputUserName" class="form-label">Name</label>
              <input
                type="text"
                class="form-control border-0 bg-light p-4"
                id="inputUserName"
                aria-label="Name input"
                value="Emir Wicks"
                disabled
              />
            </div>
            <div>
              <label for="inputEmail" class="form-label">Email</label>
              <input
                type="text"
                class="form-control border-0 bg-light p-4"
                id="inputEmail"
                aria-label="Email input"
                value="emir.wicks@mail.com"
                disabled
              />
            </div>
          </section>
          <!-- verification -->
          <section class="border-bottom py-6">
            <h3 class="fs-3 mb-4 fw-bold">Verification</h3>
            <div class="mb-3">
              <div class="d-flex justify-content-between mb-4">
                <p class="d-flex align-items-center gap-2">
                  <span class="material-symbols-outlined text-success">
                    check_circle
                  </span>
                  <span class="fw-bold">Verified</span>
                </p>
                <time datetime="2020-04-12">2020/4/12</time>
              </div>
              <button
                type="button"
                class="btn w-100 text-gray-400 fw-semibold py-4"
                disabled
              >
                Send Verification Mail
              </button>
            </div>
          </section>
          <!-- Access Level -->
          <section class="border-bottom py-6">
            <h3 class="fs-3 mb-4 fw-bold">Access Level</h3>
            <select
              class="form-select p-4 border-dark"
              aria-label="Access level selector"
            >
              <option selected>Admin</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </section>
          <!-- Custom Access -->
          <section class="border-bottom py-6">
            <h3 class="fs-3 mb-4 fw-bold">Custom Access</h3>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkLecture"
              />
              <label class="form-check-label" for="checkLecture">Lecture</label>
            </div>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkCoupon"
              />
              <label class="form-check-label" for="checkCoupon">Coupon</label>
            </div>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkMessage"
              />
              <label class="form-check-label" for="checkMessage">Message</label>
            </div>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkSetting"
              />
              <label class="form-check-label" for="checkSetting">Setting</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkTaskMenu"
              />
              <label class="form-check-label" for="checkTaskMenu"
                >Task Menu</label
              >
            </div>
          </section>
          <!-- Deactivate Account -->
          <section class="mb-10 pt-6">
            <h3 class="fs-3 mb-4 fw-bold">Deactivate Account</h3>
            <p class="d-flex align-items-cneter gap-2 text-danger mb-4">
              <span class="material-symbols-outlined"> warning </span>
              <span>This cannot be undone!</span>
            </p>
            <button
              type="button"
              class="btn btn-outline-danger w-100 fw-bold p-4"
            >
              Deactivate This Account
            </button>
          </section>
          <!-- form submit button -->
          <div class="d-flex gap-4 justify-content-end">
            <button
              type="button"
              class="btn btn-outline-primary py-2 px-8"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="submit" class="btn btn-primary py-2 px-8">
              Update
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
