<!-- add new Modal -->
<div
  class="modal fade"
  id="addNewModal"
  tabindex="-1"
  aria-labelledby="addNewModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content p-8 pb-0">
      <div class="modal-header border-bottom-0 p-0 mb-8">
        <!-- form title -->
        <h2 class="modal-title fs-2 fw-bold" id="editModalLabel">Edit Admin</h2>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <!-- modal body -->
      <div class="modal-body p-0">
        <form>
          <!-- Account -->
          <section class="border-bottom pb-6">
            <h3 class="fs-3 mb-4 fw-bold">Account</h3>
            <div class="mb-3">
              <label for="inputUserName" class="form-label">Name</label>
              <input
                type="text"
                class="form-control p-4"
                id="inputUserName"
                aria-label="請輸入您的姓名"
              />
            </div>
            <div>
              <label for="inputEmail" class="form-label">Email</label>
              <input
                type="text"
                class="form-control p-4"
                id="inputEmail"
                aria-label="請輸入您的信箱"
              />
            </div>
          </section>
          <!-- verification -->
          <section class="border-bottom py-6">
            <h3 class="fs-3 mb-4 fw-bold">Verification</h3>
            <div class="mb-3">
              <p class="d-flex align-items-center gap-2 mb-4">
                <span class="material-symbols-outlined text-danger">
                  warning
                </span>
                <span class="fw-bold">Unverified</span>
              </p>
              <button
                type="button"
                class="btn btn-outline-primary border-gray-400 fw-bold w-100 py-4"
              >
                Send Verification Mail
              </button>
            </div>
          </section>
          <!-- Access Level -->
          <section class="border-bottom py-6">
            <h3 class="fs-3 mb-4 fw-bold">Access Level</h3>
            <select
              class="form-select p-4 border-dark text-gray-600"
              aria-label="Access level selector"
            >
              <option selected>-choose access level-</option>
              <option value="1">One</option>
              <option value="2">Two</option>
              <option value="3">Three</option>
            </select>
          </section>
          <!-- Custom Access -->
          <section class="pt-6 mb-12">
            <h3 class="fs-3 mb-4 fw-bold">Custom Access</h3>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkLecture"
              />
              <label class="form-check-label" for="checkLecture">Lecture</label>
            </div>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkCoupon"
              />
              <label class="form-check-label" for="checkCoupon">Coupon</label>
            </div>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkMessage"
              />
              <label class="form-check-label" for="checkMessage">Message</label>
            </div>
            <div class="mb-4 form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkSetting"
              />
              <label class="form-check-label" for="checkSetting">Setting</label>
            </div>
            <div class="form-check">
              <input
                type="checkbox"
                class="form-check-input border-dark"
                id="checkTaskMenu"
              />
              <label class="form-check-label" for="checkTaskMenu"
                >Task Menu</label
              >
            </div>
          </section>

          <!-- form submit button -->
          <div class="d-flex gap-4 justify-content-end mb-4">
            <button
              type="button"
              class="btn btn-outline-primary py-2 px-8"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="submit" class="btn btn-primary py-2 px-8">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
